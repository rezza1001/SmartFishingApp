<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lnly_title"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txvw_title"
            android:fontFamily="@font/roboto"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_marginBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txvw_required"
            android:text="*"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/red"
            android:textSize="15sp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <EditText
        android:id="@+id/edtx_form"
        android:background="@drawable/editext_standard"
        android:fontFamily="@font/roboto"
        android:textSize="14sp"
        android:hint="Input User ID"
        android:inputType="text"
        android:textColor="@color/primaryDark"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:minHeight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/rvly_select"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:visibility="gone"
        android:background="@drawable/editext_standard"
        android:layout_width="match_parent"
        android:minHeight="40dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txvw_select"
            android:layout_toStartOf="@+id/imvw_select"
            android:gravity="center_vertical"
            android:hint="Select"
            android:minHeight="40dp"
            android:fontFamily="@font/roboto"
            android:textSize="14sp"
            android:textColor="@color/primaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/imvw_select"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_drop_down_24"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </RelativeLayout>

</LinearLayout>