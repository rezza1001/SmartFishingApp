<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_root_00"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <RelativeLayout
        android:id="@+id/mrly_search_00"
        android:layout_gravity="right"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:visibility="visible"
        android:layout_width="63dp"
        android:layout_height="match_parent"
        tools:ignore="RtlHardcoded">
        <ImageView
            android:layout_centerInParent="true"
            android:src="@drawable/ic_search_black_24dp"
            android:layout_width="25dp"
            android:layout_height="25dp" />

    </RelativeLayout>
    <FrameLayout
        android:id="@+id/frame_search_00"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rvly_backg_00"
            android:layout_marginBottom="1dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/edtx_search_00"
            android:background="#00ffffff"
            android:textSize="17sp"
            android:hint="Search"
            android:textColorHint="#33000000"
            android:visibility="visible"
            android:fontFamily="@font/roboto_medium"
            android:textColor="#de000000"
            android:paddingLeft="63dp"
            android:paddingRight="63dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:id="@+id/mrly_clear_00"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:layout_gravity="right"
            android:layout_width="63dp"
            android:layout_height="match_parent"
            tools:ignore="RtlHardcoded">
            <ImageView
                android:src="@drawable/ic_clear_24"
                android:layout_centerInParent="true"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:tint="#80000000" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/mrly_back_00"
            android:layout_gravity="left"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:layout_width="63dp"
            android:layout_height="match_parent"
            tools:ignore="RtlHardcoded">
            <ImageView
                android:src="@drawable/ic_arrow_back_24"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:layout_width="25dp"
                android:layout_height="25dp" />

        </RelativeLayout>

    </FrameLayout>


</FrameLayout>
