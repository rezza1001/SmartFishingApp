<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_body"
        app:cardElevation="3dp"
        android:layout_centerHorizontal="true"
        app:cardUseCompatPadding="true"
        app:contentPadding="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:cardPreventCornerOverlap="false"
        app:cardCornerRadius="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rvly_body"
            android:background="#49D17C"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/lnly_selectMenu"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="55dp"
                android:layout_height="55dp">
                <ImageView
                    android:id="@+id/imvw_iconMenu"
                    android:src="@drawable/ic_message"
                    android:layout_centerInParent="true"
                    android:layout_width="26dp"
                    android:layout_height="26dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txvw_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_body"
        android:layout_alignStart="@+id/card_body"
        android:layout_alignEnd="@+id/card_body"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="Menu Here"
        android:textColor="@color/white"
        android:textSize="12sp" />

</RelativeLayout>