<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txvw_edtxTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Title"
        android:textColor="@color/text_standard"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/edtx_value"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_below="@+id/txvw_edtxTitle"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_editext"
        android:digits="1234567890abcdefghijklmnopqrstupwxyz QWERTYUIOPLKJHGFDSAZXCVBNM"
        android:hint="Editext Hint"
        android:lines="1"
        android:maxLines="1"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:singleLine="true"
        android:textColor="@color/text_standard"
        android:textSize="14sp" />
    <RelativeLayout
        android:id="@+id/rvly_readOnly"
        android:layout_alignBottom="@+id/edtx_value"
        android:layout_alignTop="@+id/edtx_value"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imvw_dropDown"
            android:layout_marginEnd="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_arrow_down"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:tint="#B1B1B1" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/imvw_right"
        android:visibility="gone"
        android:layout_alignTop="@+id/edtx_value"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_baseline_edit_24"
        android:layout_width="24dp"
        android:layout_height="24dp" />
</RelativeLayout>