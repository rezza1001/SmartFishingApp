<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnly_mainOther"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_other"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:contentPaddingTop="10dp"
        app:contentPaddingBottom= "10dp"
        app:contentPaddingLeft="10dp"
        app:contentPaddingRight="10dp"
        app:cardBackgroundColor="@color/dialogBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:minHeight="200dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txvw_nameOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="@string/tomorrow"
                android:textColor="#00B9FF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txvw_dateOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txvw_nameOther"
                android:fontFamily="@font/roboto"
                android:text="Senin, 20 Januari  2022"
                android:textColor="@color/textHint"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txvw_statusOther"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_below="@+id/txvw_dateOther"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="Claudy"
                android:textColor="@color/primary"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/imvw_iconOther"
                android:layout_marginTop="25dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignTop="@+id/txvw_dateOther"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/weather_list" />

            <LinearLayout
                android:layout_below="@+id/txvw_statusOther"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:background="@drawable/bg_weather_frame"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="15dp"
                    android:layout_marginEnd="3dp"
                    android:paddingBottom="15dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txvw_windDirOther"
                        android:layout_toEndOf="@+id/imvw_windOther"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/roboto"
                        android:text="@string/speed_and_wind_direcrtion"
                        android:textColor="@color/text_standard"
                        android:textSize="9sp" />

                    <ImageView
                        android:id="@+id/imvw_windOther"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_wind" />

                    <TextView
                        android:id="@+id/txvw_windOther"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imvw_windOther"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/roboto"
                        android:text="2.50 - 4.0"
                        android:textColor="@color/text_standard"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txvw_windOther"
                        android:layout_alignStart="@+id/txvw_windOther"
                        android:layout_marginTop="4dp"
                        android:lines="1"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Tenggara - Barat Daya"
                        android:textColor="@color/text_standard"
                        android:textSize="10sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:background="@drawable/bg_weather_frame"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_marginStart="3dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_toEndOf="@+id/imvw_waveOther"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/roboto"
                        android:text="@string/wave_height"
                        android:textColor="@color/text_standard"
                        android:textSize="9sp" />

                    <ImageView
                        android:id="@+id/imvw_waveOther"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_wave" />

                    <TextView
                        android:id="@+id/txvw_waveOther"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imvw_waveOther"
                        android:fontFamily="@font/roboto"
                        android:lines="1"
                        android:layout_marginTop="5dp"
                        android:text="Low"
                        android:textColor="@color/text_standard"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/txvw_wavehightOther"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txvw_waveOther"
                        android:layout_alignStart="@+id/txvw_waveOther"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="2.50 - 4.0 Meter"
                        android:textColor="@color/text_standard"
                        android:textSize="10sp" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>