<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/form_background"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <RelativeLayout
        android:background="@color/header"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <TextView
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_bold"
            android:layout_centerInParent="true"
            android:text="@string/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/imvw_close"
            android:padding="14dp"
            android:src="@drawable/ic_clear_24"
            android:layout_alignParentEnd="true"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            app:tint="@color/white" />

    </RelativeLayout>
    <View
        android:background="#78909c"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginTop="10dp"
                android:text="@string/user_access"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:background="#eceff1"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <com.vma.smartfishingapp.component.EditTextForm
                android:id="@+id/edtx_username"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.vma.smartfishingapp.component.EditTextForm
                android:id="@+id/edtx_password"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginTop="20dp"
                android:text="@string/identity_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:background="#eceff1"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <com.vma.smartfishingapp.component.EditTextForm
                android:id="@+id/edtx_owner"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.vma.smartfishingapp.component.EditTextForm
                android:id="@+id/edtx_shipName"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.vma.smartfishingapp.component.EditTextForm
                android:id="@+id/edtx_phone"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.vma.smartfishingapp.component.EditTextForm
                android:id="@+id/edtx_address"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.vma.smartfishingapp.component.EditTextForm
                android:id="@+id/edtx_port"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.vma.smartfishingapp.component.EditTextForm
                android:id="@+id/edtx_institution"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.vma.smartfishingapp.component.EditTextForm
                android:id="@+id/edtx_gt"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.vma.smartfishingapp.component.EditTextForm
                android:id="@+id/edtx_sipi"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginTop="20dp"
                android:text="@string/ship_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:background="#eceff1"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/back_photo"
                android:layout_marginBottom="10dp"
                android:layout_width="150dp"
                android:layout_height="150dp">
                <ImageView
                    android:src="@drawable/ic_baseline_image_24"
                    android:layout_centerInParent="true"
                    app:tint="#D1D5DB"
                    android:layout_width="44dp"
                    android:layout_height="44dp"/>
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/imvw_photo"
                    app:riv_corner_radius="4dp"
                    app:riv_border_color="@color/primaryLight"
                    app:riv_border_width="1dp"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RelativeLayout>

            <LinearLayout
                android:weightSum="10"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.vma.smartfishingapp.component.VmaButton
                    android:id="@+id/bbtn_login"
                    android:layout_weight="10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>