<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/imvw_centerPoint"
        android:layout_centerInParent="true"
        android:src="@drawable/center_point_map"
        android:layout_width="180dp"
        android:layout_height="180dp"/>

    <RelativeLayout
        android:layout_toStartOf="@+id/imvw_centerPoint"
        android:layout_alignBottom="@+id/imvw_centerPoint"
        android:layout_alignTop="@+id/imvw_centerPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imvw_centerInfo"
            android:layout_centerVertical="true"
            android:src="@drawable/inc_center"
            android:padding="5dp"
            android:layout_marginEnd="-5dp"
            android:layout_width="44dp"
            android:layout_height="44dp"/>
    </RelativeLayout>

    <com.skyfishjy.library.RippleBackground
        android:id="@+id/rple_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        app:rb_color="#33E70E0E"
        app:rb_duration="1500"
        app:rb_radius="20dp"
        app:rb_rippleAmount="2"
        app:rb_scale="4" />
    </RelativeLayout>

