<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rvly_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/rvly_body"
        android:focusable="true"
        android:clickable="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="160dp"
        android:layout_marginStart="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_body"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/dialogBackground"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:paddingTop="20dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="20dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/flag_finish"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:gravity="center"
                    android:text="Anda sudah berada di radius 50 meter dari lokasi tujuan anda."
                    android:textColor="@color/text_standard"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/imvw_close"
            android:layout_alignParentEnd="true"
            android:translationZ="10dp"
            android:padding="5dp"
            android:src="@drawable/close_circled"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    </RelativeLayout>




</RelativeLayout>