<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/txvw_typeName"
        android:text="Longitude"
        android:textColor="@color/text_standard"
        android:textSize="14sp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RadioGroup
        android:id="@+id/rg_location"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb_latS"
            android:textSize="15sp"
            android:fontFamily="@font/roboto"
            android:text="S"
            android:button="@drawable/radiobutton"
            android:layout_weight="1"
            android:textColor="@color/text_standard"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/rb_latN"
            android:textSize="15sp"
            android:fontFamily="@font/roboto"
            android:text="N"
            android:background="@null"
            android:button="@drawable/radiobutton"
            android:layout_weight="1"
            android:textColor="@color/text_standard"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </RadioGroup>
    <LinearLayout
        android:id="@+id/lnly_degree"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.vma.smartfishingapp.ui.component.EditTextForm
            android:id="@+id/edtx_degree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lnly_minute"
        android:layout_marginTop="5dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.vma.smartfishingapp.ui.component.EditTextForm
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <com.vma.smartfishingapp.ui.component.EditTextForm
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lnly_second"
        android:layout_marginTop="5dp"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.vma.smartfishingapp.ui.component.EditTextForm
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <com.vma.smartfishingapp.ui.component.EditTextForm
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <com.vma.smartfishingapp.ui.component.EditTextForm
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>