<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#20000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rvly_body_00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rvly_header_00"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/mrly_back_00"
                android:layout_width="60dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:tint="@color/primaryDark" />
            </com.balysv.materialripple.MaterialRippleLayout>

            <EditText
                android:id="@+id/edtx_search_00"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/mrly_back_00"
                android:background="#00000000"
                android:fontFamily="@font/roboto"
                android:gravity="center_vertical"
                android:hint="Cari Unit Kerja.."
                android:textColor="@color/black"
                android:textColorHint="#B1B1B1"
                android:textSize="15sp" />
            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/mrly_clear_00"
                android:layout_alignParentEnd="true"
                android:layout_width="60dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imvw_clear_00"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_clear_24"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:tint="#000000" />
            </com.balysv.materialripple.MaterialRippleLayout>
            <View
                android:layout_alignParentBottom="true"
                android:background="#19000000"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvw_data_00"
            android:background="@color/white"
            android:layout_below="@+id/rvly_header_00"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
</RelativeLayout>